# =============================================================================
# ä¸»ç¨‹åº
# =============================================================================

main() {
    # åˆå§‹åŒ–Claudeç›®å½•
    if ! init_claude_dir; then
        exit 1
    fi
    
    # è§£æå‘½ä»¤è¡Œå‚æ•°
    case "${1:-}" in
        "")
            interactive_menu
            ;;
        add)
            add_config
            ;;
        delete)
            delete_config
            ;;
        edit)
            edit_config
            ;;
        list)
            list_configs
            ;;
        help|-h|--help)
            show_help
            ;;
        [1-9])
            local configs
            mapfile -t configs < <(get_all_configs)
            if [[ "$1" -le ${#configs[@]} ]]; then
                switch_config "${configs[$((1 - 1))]}"
            else
                print_error "æ— æ•ˆçš„é…ç½®ç¼–å·: $1"
                exit 1
            fi
            ;;
        *)
            # å°è¯•ä½œä¸ºé…ç½®åç§°
            if config_exists "$1"; then
                switch_config "$1"
            else
                print_error "æœªçŸ¥å‘½ä»¤æˆ–é…ç½®: $1"
                print_info "ä½¿ç”¨ 'ccs help' æŸ¥çœ‹å¸®åŠ©ä¿¡æ¯"
                exit 1
            fi
            ;;
    esac
}

# è¿è¡Œä¸»ç¨‹åº
main "$@"